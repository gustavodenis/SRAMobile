<?xml version="1.0" encoding="utf-8"?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id="com.softtek.mobile.app"
    version="1.0.0.0">
  <name>Softtek Mobile App</name>
  <description>
    Aplicação para funcionários da Softtek.
  </description>
  <author href="http://www.softtek.com" email="gustavo.denis@softtek.com">
    Gustavo Denis
  </author>
  <content src="index.html" />
  <preference name="phonegap-version" value="3.7.0" />
  <preference name="splashScreen" value="screen" />
  <preference name="fullscreen" value="true" />
  <preference name="orientation" value="portrait" />
  <preference name="target-device" value="universal" />
  <preference name="webviewbounce" value="true" />
  <preference name="prerendered-icon" value="true" />
  <preference name="stay-in-webview" value="false" />
  <preference name="ios-statusbarstyle" value="black-opaque" />
  <preference name="detect-data-types" value="true" />
  <preference name="exit-on-suspend" value="false" />
  <preference name="show-splash-screen-spinner" value="true" />
  <preference name="auto-hide-splash-screen" value="true" />
  <preference name="SplashScreenDelay" value="10000" />
  <preference name="disable-cursor" value="false" />
  <preference name="android-minSdkVersion" value="10" />
  <preference name="android-installLocation" value="auto" />
  <feature name="http://api.phonegap.com/1.0/network" />
  <feature name="http://api.phonegap.com/1.0/notification" />
  <feature name="http://api.phonegap.com/1.0/device" />
  <feature name="http://api.phonegap.com/1.0/file" />
  
  <gap:plugin name="org.apache.cordova.splashscreen" />
  <gap:plugin name="org.apache.cordova.globalization" />
  <gap:plugin name="org.apache.cordova.device" />
  <gap:plugin name="org.apache.cordova.network-information" />
  <!--<gap:plugin name="com.brodysoft.sqliteplugin" />-->
  <!--<gap:plugin name="it.witek.cordova.plugin.background-mode" />-->

  <gap:platform name="ios" />
  <gap:platform name="android" />
  <gap:platform name="winphone" />

  <icon src="images/icon.png" /> <!-- 64x64 -->
  <icon src="App_Resources/Android/drawable-ldpi/icon.png"          gap:platform="android"  gap:qualifier="ldpi" /> <!-- 36x36 -->
  <icon src="App_Resources/Android/drawable-mdpi/icon.png"          gap:platform="android"  gap:qualifier="mdpi" /> <!-- 48x48 -->
  <icon src="App_Resources/Android/drawable-hdpi/icon.png"          gap:platform="android"  gap:qualifier="hdpi" /> <!-- 72x72 -->
  <icon src="App_Resources/Android/drawable-xhdpi/icon.png"         gap:platform="android"  gap:qualifier="xhdpi" /> <!-- 72x72 -->
  <icon src="App_Resources/Android/drawable-xxhdpi/icon.png"        gap:platform="android"  gap:qualifier="xxhdpi" /> <!-- 72x72 -->
  <icon src="App_Resources/Android/drawable-xxhdpi/icon.png"        gap:platform="android"  gap:qualifier="fr-xxhdpi" /> <!-- 72x72 -->
    
  <icon src="App_Resources/iOS/icon-60@3x.png"                      gap:platform="ios" width="180" height="180" /> <!-- iPhone 6 / 6+ -->
  <icon src="App_Resources/iOS/icon-60.png"                         gap:platform="ios" width="60" height="60" /> <!-- iPhone / iPod Touch  -->
  <icon src="App_Resources/iOS/icon-60@2x.png"                      gap:platform="ios" width="120" height="120" /> <!-- iPhone / iPod Touch  -->
  <icon src="App_Resources/iOS/icon-76.png"                         gap:platform="ios" width="76" height="76" /> <!-- iPad -->
  <icon src="App_Resources/iOS/icon-76@2x.png"                      gap:platform="ios" width="152" height="152" /> <!-- iPad -->
  <icon src="App_Resources/iOS/icon-small.png"                      gap:platform="ios" width="29" height="29" /> <!-- Settings Icon -->
  <icon src="App_Resources/iOS/icon-small@2x.png"                   gap:platform="ios" width="58" height="58" /> <!-- Settings Icon -->
  <icon src="App_Resources/iOS/icon-40.png"                         gap:platform="ios" width="40" height="40" /> <!-- Spotlight Icon -->
  <icon src="App_Resources/iOS/icon-40@2x.png"                      gap:platform="ios" width="80" height="80" /> <!-- Spotlight Icon -->
  <icon src="App_Resources/iOS/icon-Small-50.png"                   gap:platform="ios" width="50" height="50" />
  <icon src="App_Resources/iOS/icon-Small-50@2x.png"                gap:platform="ios" width="110" height="110" />
  <icon src="App_Resources/iOS/icon.png"                            gap:platform="ios" width="57" height="57" />  <!-- iPhone / iPod Touch -->
  <icon src="App_Resources/iOS/icon@2x.png"                         gap:platform="ios" width="114" height="114" />   <!-- iPhone / iPod Touch -->
  <icon src="App_Resources/iOS/icon-72.png"                         gap:platform="ios" width="72" height="72" /> <!-- iPad -->
  <icon src="App_Resources/iOS/icon-72@2x.png"                      gap:platform="ios" width="144" height="144" /> <!-- iPad -->
  <icon src="App_Resources/iOS/icon@2x.png"                         gap:platform="ios" width="114" height="114" /> <!-- iPhone / iPod Touch -->
  
  <icon src="App_Resources/winphone/icon.png"                       gap:platform="winphone" /> <!-- 48x48 -->
  <icon src="App_Resources/winphone/tileicon.png"                   gap:platform="winphone" gap:role="background" /> <!-- 300x300 -->

  <gap:splash src="App_Resources/Android/drawable-ldpi/splash.png"              gap:platform="android" gap:qualifier="ldpi" /> <!-- 240x320 -->
  <gap:splash src="App_Resources/Android/drawable-mdpi/splash.png"              gap:platform="android" gap:qualifier="mdpi" /> <!-- 320x480 -->
  <gap:splash src="App_Resources/Android/drawable-hdpi/splash.png"              gap:platform="android" gap:qualifier="hdpi" /> <!-- 480x800 -->
  <gap:splash src="App_Resources/Android/drawable-xhdpi/splash.png"             gap:platform="android" gap:qualifier="xhdpi" /> <!-- 640x960 -->
  <gap:splash src="App_Resources/Android/drawable-xxhdpi/splash.png"            gap:platform="android" gap:qualifier="fr-xhdpi" /> <!-- 600x1024 -->
  <gap:splash src="App_Resources/Android/drawable-port-xxhdpi/splash.png"       gap:platform="android" gap:qualifier="port-xxhdpi" /> <!-- 720x1280 -->
  <gap:splash src="App_Resources/Android/drawable-landscape-xxhdpi/splash.png"  gap:platform="android" gap:qualifier="land-xxhdpi" /> <!-- 1024x768 -->
  
  <gap:splash src="App_Resources/iOS/Default.png"                   gap:platform="ios" width="320" height="480" /> <!-- iPhone and iPod touch -->
  <gap:splash src="App_Resources/iOS/Default@2x.png"                gap:platform="ios" width="640" height="960" /> <!-- iPhone and iPod touch -->
  <gap:splash src="App_Resources/iOS/Default-568h@2x.png"           gap:platform="ios" width="640" height="1136" /> <!-- iPhone 5 / iPod Touch (5th Generation) -->
  <gap:splash src="App_Resources/iOS/Default-667h@2x.png"           gap:platform="ios" width="750" height="1334" /> <!-- iPhone 6 -->
  <gap:splash src="App_Resources/iOS/Default-Portrait-736h@3x.png"  gap:platform="ios" width="1242" height="2208" /> <!-- iPhone 6 -->
  <gap:splash src="App_Resources/iOS/Default-Landscape-736h@3x.png" gap:platform="ios" width="2208" height="1242" /> <!-- iPhone 6 -->
  <gap:splash src="App_Resources/iOS/Default-Portrait.png"          gap:platform="ios" width="768" height="1024" /> <!-- iPad -->
  <gap:splash src="App_Resources/iOS/Default-Landscape.png"         gap:platform="ios" width="1024" height="768" /> <!-- iPad -->
  <gap:splash src="App_Resources/iOS/Default-Portrait@2x.png"       gap:platform="ios" width="1536" height="2048" /> <!-- Retina iPad -->
  <gap:splash src="App_Resources/iOS/Default-Landscape@2x.png"      gap:platform="ios" width="2048" height="1536" /> <!-- Retina iPad -->

  <gap:splash src="App_Resources/winphone/splash.jpg"               gap:platform="winphone" /> <!-- 768x1024 -->

  <access origin="*" />
  <access origin="*.softtek.com" />
  <access origin="https://intrasoft.softtek.com" subdomains="true" />
  <access origin="http://127.0.0.1*"/>

</widget>